{{#if resume.projects.length}}
<div class="container project-container">
    {{> title label="projects" value="Projects"}}

    {{#if resume.projectOrder}}
        {{#each resume.projectOrder}}
            {{#with (lookup ../resume.projects (findIndex ../resume.projects "name" this))}}
                <section class="item" data-project-name="{{name}}" data-start-date="{{startDate}}" data-end-date="{{endDate}}">
                    {{> section-header name=this.name website=this.url showWebsite=true}}

                    {{#if role}}
                        <h5>{{role}}</h5>
                    {{/if}}

                    {{#if keywords.length}}
                    <div class="flex-container">
                        {{#each keywords}}
                            <h6 class="skill">{{.}}</h6>
                        {{/each}}
                    </div>
                    {{/if}}

                    {{#if summary}}
                    <p class="summary">{{summary}}</p>
                    {{/if}}

                    {{#if highlights.length}}
                    <ul>
                        {{#each highlights}}
                        <li>{{.}}</li>
                        {{/each}}
                    </ul>
                    {{/if}}
                </section>
            {{/with}}
        {{/each}}
    {{else}}
        {{#each resume.projects}}
            <section class="item" data-project-name="{{name}}" data-start-date="{{startDate}}" data-end-date="{{endDate}}">
                {{> section-header name=this.name website=this.url showWebsite=true}}

                {{#if role}}
                    <h5>{{role}}</h5>
                {{/if}}

                {{#if keywords.length}}
                <div class="flex-container">
                    {{#each keywords}}
                        <h6 class="skill">{{.}}</h6>
                    {{/each}}
                </div>
                {{/if}}

                {{#if summary}}
                <p class="summary">{{summary}}</p>
                {{/if}}

                {{#if highlights.length}}
                <ul>
                    {{#each highlights}}
                    <li>{{.}}</li>
                    {{/each}}
                </ul>
                {{/if}}
            </section>
        {{/each}}
    {{/if}}
</div>
{{/if}}
